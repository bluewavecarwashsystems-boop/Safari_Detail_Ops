# Environment (qa or prod)
APP_ENV=qa

# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY will use AWS CLI credentials if not set here
# Uncomment and set these for production deployment where AWS CLI is not available:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# DynamoDB Tables (auto-prefixed with safari-detail-ops-<env>-)
DYNAMODB_JOBS_TABLE=jobs
DYNAMODB_USERS_TABLE=users

# S3 Buckets (auto-prefixed with safari-detail-ops-<env>-)
# Note: S3 bucket names are globally unique, append account number if needed
# Phase 3: Used for photo uploads with presigned URLs
S3_PHOTOS_BUCKET=photos-<aws_account_id>
S3_PUBLIC_BASE_URL=https://safari-detail-ops-<env>-photos-<aws_account_id>.s3.us-east-1.amazonaws.com

# Authentication
# Generate a secure random string (at least 32 characters)
# Example: openssl rand -base64 32
AUTH_SECRET=<your_secret_key_here_minimum_32_characters>

# Cron Job Secret
# Used to secure cron endpoints like reconciliation
# Example: openssl rand -base64 32
CRON_SECRET=<your_cron_secret_minimum_32_characters>

# Square API (Phases B & C)
# Phase 3: Used for customer details caching
# Phase 4: Used for reconciliation
SQUARE_APPLICATION_ID=<your_square_app_id>
SQUARE_ACCESS_TOKEN=<placeholder>
SQUARE_WEBHOOK_SIGNATURE_KEY=<placeholder>
SQUARE_ENVIRONMENT=sandbox
# Optional: Franklin location filtering (leave empty in QA for testing all locations)
SQUARE_FRANKLIN_LOCATION_ID=<location_id>

# Logging
LOG_LEVEL=info
